function cambiarLoginBox(){
	$('.mensaje_login_box a').click(function() {
		$('.form').animate({
			height: "toggle",
			opacity: "toggle"
		}, "slow");
	});
}

function mostrarLoginBox(){
	$('.boton_mostrar_login_box').click(function() {
		$('.login-box').animate({
			height: "toggle",
			opacity: "toggle"
		}, "slow" );
	});
}